{
  "compilerOptions": {
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"],
      "@components/*": ["components/*"],
      "@assets/*": ["assets/*"],
      "@modules/*": ["modules/*"],
      "@screens/*": ["screens/*"],
      "@utils/*": ["utils/*"]
    },
    "incremental": true,
    "strictNullChecks": true,
    "strictBindCallApply": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": false,
    "esModuleInterop": true,
    "strict": true,
    "noEmit": true,
    "isolatedModules": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "jsx": "react-native",
    "module": "esnext",
    "moduleResolution": "node",
    // "noImplicitAny": false,
    // "noImplicitReturns": true,
    // "noImplicitThis": true,
    // "noUnusedLocals": false,
    "sourceMap": true,
    "target": "esnext",
    "lib": ["esnext", "dom"],
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "extends": "expo/tsconfig.base",
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "metro.config.js",
    "index.js",
    "src/styled.ts"
  ],
  "exclude": [
    "node_modules",
    "node_modules/@types",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
